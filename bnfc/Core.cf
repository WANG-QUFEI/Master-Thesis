-- concrete syntax
position token Id ((letter | '⊥' | '¬') (letter | digit | '_')*);

entrypoints Program;

layout toplevel;

Prog. Program ::= [Exp];

EU.    Exp3 ::= "*";
EVar.  Exp3 ::= Id;
EApp.  Exp2 ::= Exp2 Exp3;
EArr.  Exp1 ::= Exp2 "->" Exp1;
EPi.   Exp1 ::= "[" Id ":" Exp1 "]" Exp1;
EPost. Exp1 ::= Id ":" Exp1;
EDec.  Exp  ::= Id ":" Def;

Def.  Def  ::= Exp1 "=" Exp1;

separator Exp ";";

coercions Exp 3;

comment "--";

comment "{-" "-}";
