-- concrete syntax
position token Id ((letter | '⊥' | '¬') (letter | digit | '_')*);

entrypoints Context;

layout toplevel;

Ctx. Context ::= [Decl];

U.      Exp3 ::= "*";
Var.    Exp3 ::= Id;
App.    Exp2 ::= Exp2 Exp3;
Arr.    Exp1 ::= Exp2 "->" Exp1;
Pi.     Exp1 ::= "[" Decl "]" Exp1;
Where.  Exp  ::= Exp "[" Decl "]";

Dec.    Decl ::= Id ":" Exp;
Def.    Decl ::= Id ":" Exp "=" Exp;

separator Decl ";";

coercions Exp 3;

comment "--";

comment "{-" "-}";
