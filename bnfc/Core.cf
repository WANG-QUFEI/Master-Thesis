-- concrete syntax
position token Id ((letter | '⊥' | '¬') (letter | digit | '_')*);

entrypoints Context;

layout toplevel;

Ctx. Context ::= [Def];

U.      CExp2 ::= "*";
Var.    CExp2 ::= Id;
App.    CExp1 ::= CExp1 CExp2;
Arr.    CExp ::= CExp1 "->" CExp;
Pi.     CExp ::= "[" Dec "]" CExp;
Where.  CExp  ::= "[" Def "]" CExp ;

Dec.    Dec ::= Id ":" CExp;
Def.    Def ::= Id ":" CExp "=" CExp;

separator Def ";";

coercions CExp 3;

comment "--";

comment "{-" "-}";
